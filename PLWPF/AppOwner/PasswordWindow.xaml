<Window x:Class="PLWPF.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
       Title="סיסמא" Height="320.206" Width="580.471">
    <Grid>
        <StackPanel Margin="10">
            <Label Margin="240,0,236.4,0" HorizontalAlignment="Center" Content="שם משתמש" Width="78" FontWeight="Bold" />
            <TextBox x:Name="Name" HorizontalContentAlignment="Center" Margin="192,0,192.4,0"/>
            <Label Content="סיסמא" Margin="254,0,236.4,0" FontWeight="Bold"/>
            <PasswordBox x:Name="Pass" HorizontalContentAlignment="Center" MaxLength="6" Margin="192,0,192.4,0"  PasswordChar="*" />


        </StackPanel>
        <Button x:Name="passwordButton" Content="כניסה" Style="{StaticResource ButtonStyle2}"  Margin="193,134,208.4,93.4" FontWeight="Bold" Click="passwordButton_Click"/>
        <Button x:Name="backButton" Style="{StaticResource ButtonStyle2}" Content="חזרה" HorizontalAlignment="Left" Margin="235,239,0,0" VerticalAlignment="Top" Width="93" Click="backButton_Click" Height="27" FontWeight="Bold"/>
    </Grid>
</Window>