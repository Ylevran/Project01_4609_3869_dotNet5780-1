        <TextBox x:Name="keyTextBox" Opacity="0.8" FontSize="20" HorizontalContentAlignment="Center" HorizontalAlignment="Left"  Margin="256,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280"/>

