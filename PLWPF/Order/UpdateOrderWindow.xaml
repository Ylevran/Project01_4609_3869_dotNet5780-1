        <Button x:Name="updateButton" Style="{StaticResource ButtonStyle2}" FontSize="20" Content="עדכן" Margin="318,211,318.6,0" VerticalAlignment="Top"  Click="Button_Click_1"/>
        <Button x:Name="backButton" Style="{StaticResource ButtonStyle2}" Content="חזרה" HorizontalAlignment="Left" Margin="356,317,0,0" VerticalAlignment="Top" Width="93" Click="backButton_Click" Height="27" FontWeight="Bold"/>

    </Grid>
